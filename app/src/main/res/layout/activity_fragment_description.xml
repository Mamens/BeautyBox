<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragment_description"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.alash.beautybox.Fragments.FirstFragments.Fragment_description4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorText">
            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/NetworkImageView_fragment_description1"
                android:minHeight="100dp"
                android:maxHeight="300dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorText">

            <TextView
                android:id="@+id/TextView_fragment_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Misal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBackground"/>
            <TextView
                android:id="@+id/TextView_fragment_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/TextView_fragment_description1"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:text="Kolzhazba Kolzhazba Kolzhazba Kolzhazba Kolzhazba Kolzhazba Kolzhazba Kolzhazba Kolzhazba Kolzhazba Kolzhazba "
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/colorBackground"/>
            <TextView
                android:id="@+id/TextView_fragment_description3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/TextView_fragment_description2"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:text="2000 t/sht"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBackground"/>
            <TextView
                android:id="@+id/TextView_fragment_description8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/TextView_fragment_description3"
                android:gravity="center"
                android:layout_marginTop="10sp"

                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBackground"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorText">

            <TabHost
                android:id="@+id/tabhost_fragment_description"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@android:id/tabcontent">

                            <RelativeLayout
                                android:id="@+id/tab2"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/fragment_description_1"
                                    android:text="Производитель"
                                    android:textColor="@color/colorBackground"
                                    android:textSize="17sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/fragment_description_2"
                                    android:textColor="@color/colorBackground"
                                    android:layout_marginTop="40dp"
                                    android:text="Функция"
                                    android:textSize="17sp"/>
                                <TextView
                                    android:id="@+id/TextView_fragment_description4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Производитель"
                                    android:textSize="17sp"
                                    android:layout_alignTop="@+id/fragment_description_1"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/colorBackground"
                                    android:layout_alignParentRight="true"/>
                                <TextView
                                    android:id="@+id/TextView_fragment_description5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Функция"
                                    android:textColor="@color/colorBackground"
                                    android:textSize="17sp"
                                    android:layout_alignTop="@+id/fragment_description_2"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"/>



                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/tab3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/TextView_fragment_description6"
                                    android:text="Состав"
                                    android:textSize="17sp"
                                    android:gravity="center"
                                    android:layout_marginTop="20dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/tab1"
                                android:orientation="vertical"
                                android:padding="10dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/TextView_fragment_description7"
                                android:layout_marginTop="20dp"
                                android:text="Применение"
                                android:textSize="17sp"
                                android:gravity="center" />
                            </LinearLayout>
                        </FrameLayout>
                </LinearLayout>
            </TabHost>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="В корзину"
            android:id="@+id/Button_fragment_description"
            android:background="@color/colorPink"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_marginBottom="15dp"/>



    </LinearLayout>

</ScrollView>
