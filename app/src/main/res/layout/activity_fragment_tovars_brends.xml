<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.alash.beautybox.Fragments.FirstFragments.Fragment_tovars_brends3">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/tovars_brends_networkimagview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tovars_brends_networkimagview1"
            android:id="@+id/tovars_brends_TextView1"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/tovars_brends_TextView2_RL"
        android:background="@color/colorText">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tovars_brends_TextView2"
            android:textSize="20sp"
            android:gravity="center"/>
    </RelativeLayout>
    <com.alash.beautybox.ExpandableGridview
        android:id="@+id/ExpandableGridview1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:isScrollContainer="false"
        android:padding="7dp"
        />
    <RelativeLayout
        android:id="@+id/tovars_brends_TextView3_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorText">
        <TextView
            android:id="@+id/tovars_brends_TextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <com.alash.beautybox.ExpandableGridview
        android:id="@+id/ExpandableGridview2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:isScrollContainer="false"
        android:padding="7dp"
        />
    <RelativeLayout
        android:id="@+id/tovars_brends_TextView4_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorText">
        <TextView
            android:id="@+id/tovars_brends_TextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <com.alash.beautybox.ExpandableGridview
        android:id="@+id/ExpandableGridview3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:isScrollContainer="false"
        android:padding="7dp"
        />


</LinearLayout>
</ScrollView>