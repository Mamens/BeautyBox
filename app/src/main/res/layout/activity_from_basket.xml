<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<com.android.volley.toolbox.NetworkImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/from_basket_imageview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/from_basket_imageview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />
    <TextView
        android:id="@+id/from_basket_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:text="Name product"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textColor="@color/colorBackground"
        android:layout_below="@+id/from_basket_imageview2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/from_basket_editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:text="Price"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textColor="@color/colorBackground"
        android:layout_below="@+id/from_basket_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <ImageView
        android:background="@android:drawable/ic_media_previous"
        android:layout_toLeftOf="@+id/form_of_basket1_result"
        android:layout_toStartOf="@+id/form_of_basket1_result"
        android:id="@+id/from_basket1_imageview_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/from_basket1_imageview_up"
        />

    <TextView
        android:layout_toLeftOf="@+id/from_basket1_imageview_up"
        android:layout_toStartOf="@+id/from_basket1_imageview_up"
        android:id="@+id/form_of_basket1_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:lines="1"
        android:layout_alignTop="@+id/from_basket1_imageview_up"/>

    <ImageView
        android:background="@android:drawable/ic_media_next"
        android:layout_below="@+id/from_basket_editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/from_basket1_imageview_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>